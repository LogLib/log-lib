{
    "$schema": "https://turborepo.org/schema.json",
    "globalDotEnv": [".env"],
    "pipeline": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["fmt", "^build"],
            "outputs": ["dist/**", ".next/*"]
        },
        "fmt": {
            "cache": false
        },
        "test": {
            "dependsOn": ["build"],
            "outputs": []
        },
        "typecheck": {
            "dependsOn": ["build"],
            "outputs": [],
            "cache": true
        },
        "deploy": {
            "cache": false
        },
        "migrate": {
            "cache": false
        }
    }
}
